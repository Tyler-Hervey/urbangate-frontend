generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  name      String?
  role      Role     @default(USER)
  loan      Lendor[]
}

model Loan {
  id            String    @id @default(uuid())
  created_at    DateTime  @default(now()) @db.Timestamptz(6)
  property_id   BigInt?
  interest_rate Decimal?  @db.Decimal
  loan_amount   Decimal?  @db.Decimal
  term_months   Decimal?  @db.Decimal
  start_date    DateTime? @db.Date
  user          Lendor[]
}

model Lendor {
  userId String @default(uuid())
  loanId String @default(uuid())
  loan   Loan   @relation(fields: [loanId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@id([userId, loanId])
}

model Property {
  property_id String   @id(map: "property_pkey") @unique(map: "property_property_id_key") @default(uuid()) @db.Uuid
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  img_url     String
  address     String
  slug        String   @unique
  description String
}

enum Role {
  ADMIN
  USER
}
